<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tevinjeffrey.vapor" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".VaporApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Vapr_Default"
        tools:replace="android:icon,android:label" >
        <meta-data
            android:name="DATABASE"
            android:value="synced_items.db" />
        <meta-data
            android:name="VERSION"
            android:value="8" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.tevinjeffrey.vapor.okcloudapp.model" />

        <activity
            android:name=".ui.files.FilesActivity"
            android:theme="@style/Vapor_FilesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait"

            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".services.IntentBridge"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.UploadService"
            android:exported="false"
            android:label="@string/app_name" >
        </service>

        <activity
            android:name=".ui.ImageActivity"
            android:label="@string/title_activity_image"
            android:theme="@style/Vapr_Fullscreen" >
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".IntroActivity"
            android:theme="@style/Vapr_Default"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
