<com.tevinjeffrey.vapor.customviews.ElasticDragDismissFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  app:dragDismissDistance="112dp"
  app:dragDismissScale="0.95"
  tools:context="com.tevinjeffrey.vapor.ui.ImageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_desc_full_image"/>
</com.tevinjeffrey.vapor.customviews.ElasticDragDismissFrameLayout>
