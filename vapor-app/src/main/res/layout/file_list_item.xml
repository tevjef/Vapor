<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:minHeight="80dp"
        android:maxHeight="80dp"
        android:weightSum="1"
        android:background="@android:color/white">


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/image_container"
            android:background="@color/primary"
            android:gravity="center"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/files_list_image"
                android:scaleType="centerInside"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/files_list_right_container">

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                app:materialIcon="link"
                app:materialIconColor="?attr/colorAccent"
                app:materialIconSize="14dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:visibility="gone"
                android:id="@+id/files_list_link"/>

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image 2014-08-14 at 1.30.25 PM.png"
                android:id="@+id/files_list_title"
                android:textSize="14sp"
                android:textColor="@color/primary_text"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 mins ago"
                android:id="@+id/files_list_time_ago"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:layout_below="@+id/files_list_title"
                android:layout_marginTop="4dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
