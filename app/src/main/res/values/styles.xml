<resources>

    <!-- Base application theme. -->
    <style name="Vapr_Default" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>

    <!-- Main theme colors -->
    <!--   your app branding color for the app bar -->
    <item name="colorPrimary">@color/primary</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/accent</item>

    <item name="colorControlActivated">@color/accent</item>
    <item name="colorControlHighlight">@color/accent_light</item>
    <item name="colorControlNormal">@color/primary</item>

    <item name="android:statusBarColor">@color/primary_dark</item>
    <item name="android:navigationBarColor">@color/primary_dark</item>

    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textColorSecondary">@color/secondary_text</item>

    <item name="android:windowBackground">@color/window_background</item>
</style>

    <style name="Vapr_Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@android:color/white</item>

        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/primary_light</item>

        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Vapr_White" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@android:color/white</item>

        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/primary_light</item>

        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/primary_darker</item>

        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/primary_light</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/primary_darker</item>

        <item name="android:textColor">@color/primary_dark</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary_dark</item>
    </style>

    <style name="DrawerTheme" parent="Vapr_Default">
        <item name="colorAccent">@color/blue_grey</item>
        <item name="colorControlActivated">@color/blue_grey</item>
        <item name="colorControlHighlight">@color/accent_light</item>
    </style>

</resources>
