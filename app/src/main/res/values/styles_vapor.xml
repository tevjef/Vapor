<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ActionBar.Solid.Vapor" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <item name="android:height">50dp</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_vapor</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_vapor</item>
        <item name="progressBarStyle">@style/ProgressBar.Vapor</item>

        <!-- Support lower versions  -->
        <item name="background">@drawable/ab_solid_vapor</item>

    </style>

    <style name="ActionBar.Transparent.Full" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:divider">@color/white</item>
        <!-- Support lower versions  -->
        <item name="background">@null</item>
    </style>

    <style name="ActionBar.Transparent.AuthActivity" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@color/activity_bg</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:divider">@color/white</item>
        <!-- Support lower versions  -->
        <item name="background">@color/activity_bg</item>
    </style>


    <style name="ActionBarTitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">12dp</item>   <!-- Can't get this padding to work :( -->

    </style>
    <style name="PopupMenu.Vapor" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:background">@drawable/menu_dropdown_panel_vapor</item>
        <item name="background">@drawable/menu_dropdown_panel_vapor</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_vapor</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="DropDownListView.Vapor" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_vapor</item>
    </style>



    <style name="ActionBarTabStyle.Vapor" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_vapor</item>
    </style>

    <style name="DropDownNav.Vapor" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_vapor</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_vapor</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_vapor</item>
    </style>

    <style name="ProgressBar.Vapor" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_vapor</item>
    </style>


    <style name="ActionButton.CloseMode.Vapor" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_vapor</item>
    </style>

    <style name="Overflow.Blue" parent="@style/Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow_icon_blue</item>
    </style>

    <style name="Overflow.White" parent="@style/Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow_icon_white</item>
    </style>

    <style name="Animation.Navigation.Forward" parent="android:style/Animation.Activity">
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_open_enter</item>

    </style>
    <style name="Animation.Navigation.Back" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_close_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

    </style>
    <style name="Animation.Fade" parent="android:style/Animation.Activity">
        <!--        <item name="android:activityOpenEnterAnimation">@anim/fadein</item>
                <item name="android:activityOpenExitAnimation">@anim/fadeout</item>
                <item name="android:activityCloseEnterAnimation">@null</item>
                <item name="android:activityCloseExitAnimation">@null</item>-->
    </style>



    <style name="RadioButtonVapor" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vapor_btn_radio_holo_light</item>
    </style>

    <style name="SpinnerVapor" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/vapor_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/vapor_list_selector_holo_light</item>
    </style>




    <style name="SpinnerDropDownItemVapor" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/vapor_btn_radio_holo_light</item>
    </style>
    <style name="ToggleVapor" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/vapor_btn_toggle_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textColor">#000000</item>
    </style>



    <style name="PopupMenuTextAppearanceSmall" parent="TextAppearance.Sherlock.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PopupMenuTextAppearanceLarge" parent="TextAppearance.Sherlock.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>