    <item android:bottom="8px">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/success"/>

            <corners
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp"
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp"

                />
        </shape>
    </item>
</layer-list>
