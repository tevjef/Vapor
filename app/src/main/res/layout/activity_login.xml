<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="deadpixel.app.vapor.AuthenticationActivity"
    android:background="@color/light_blue">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout"
        android:weightSum="2"
        android:background="@drawable/glow"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:gravity="bottom">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout"
            android:weightSum="1"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Login_logo"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"
                android:layout_gravity="center|top" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_field"
                android:layout_below="@+id/pass_field"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:hint="E-mail address"
                android:textColor="@color/blue"
                android:textColorHighlight="@color/light_blue"
                android:textColorHint="@color/text_hint"
                android:singleLine="true"
                android:shadowColor="@color/text_white"
                android:background="@drawable/edittext"
                android:padding="9dp"
                android:layout_marginBottom="7dp"
                android:textSize="15dp"
                android:autoText="true"
                android:fontFamily="sans-serif-light"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pass_field"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:hint="Password"
                android:textColor="@color/blue"
                android:textColorHint="@color/text_hint"
                android:singleLine="true"
                android:shadowColor="@color/text_white"
                android:textColorHighlight="@color/light_blue"
                android:textColorLink="@color/text_white"
                android:background="@drawable/edittext"
                android:padding="9dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="7dp"
                android:textSize="15dp"
                android:fontFamily="sans-serif-light"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:id="@+id/btn_toggle"
                    android:layout_gravity="right"
                    android:onClick="btnToggle"
                    android:background="@drawable/btn_signin"
                    android:textColor="@color/text_white"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show password"
                    android:id="@+id/showpassword"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="true"
                    android:checked="false"
                    android:textColor="@color/text_white"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="false"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-light"/>

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tos"
            android:id="@+id/tos"
            android:textColor="@color/text_white"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="tosDialog" />

    </LinearLayout>

</RelativeLayout>
