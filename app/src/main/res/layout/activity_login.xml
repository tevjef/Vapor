<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="deadpixel.app.vapor.AuthenticationActivity"
    android:background="@color/activity_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/contain_layout"
        android:weightSum="2"
        android:background="@drawable/glow"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:gravity="bottom"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:id="@+id/contain_layout"
            android:weightSum="1"
            android:layout_marginTop="20dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Login_logo"
                android:src="@drawable/logo_image"
                android:adjustViewBounds="true"
                android:layout_marginBottom="10dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Login_logo_text"
                android:src="@drawable/logo_text"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contain_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1">



            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/email_field"
                    android:layout_below="@+id/pass_field"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:hint="E-mail address"
                    android:imeOptions="actionNext"
                    android:textColor="@color/dark_gray_blue"
                    android:textColorHighlight="@color/light_blue"
                    android:textColorHint="@color/text_hint"
                    android:singleLine="true"
                    android:nextFocusDown="@id/pass_field"
                    android:shadowColor="@color/white"
                    android:background="@drawable/field_selector"
                    android:padding="9dp"
                    android:layout_marginBottom="7dp"
                    android:textSize="15dp"
                    android:autoText="true"
                    android:fontFamily="sans-serif-light"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/pass_field"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:hint="Password"
                    android:imeOptions="actionDone"
                    android:textColor="@color/dark_gray_blue"
                    android:textColorHint="@color/text_hint"
                    android:singleLine="true"
                    android:shadowColor="@color/white"
                    android:textColorHighlight="@color/light_blue"
                    android:textColorLink="@color/white"
                    android:background="@drawable/field_selector"
                    android:padding="9dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="7dp"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in"
                        android:id="@+id/btn_toggle"
                        android:layout_gravity="right"
                        android:onClick="btnToggle"
                        android:background="@drawable/btn_toggle_selector"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold" />



                </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tos"
            android:id="@+id/tos"
            android:textColor="@color/dark_gray_blue"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="tosDialog" />

    </LinearLayout>

</RelativeLayout>